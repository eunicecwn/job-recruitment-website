@model IPagedList<JobRecruitment.Models.QuestionSet>
@using X.PagedList
@using X.PagedList.Mvc.Core

@if (Model == null)
{
    <div class="question-table-empty">
        <i class="fas fa-search question-table-empty-icon"></i>
        <h4>No data available</h4>
        <p>Unable to load question sets</p>
    </div>
}
else if (!Model.Any())
{
    <div class="question-table-empty">
        <i class="fas fa-search question-table-empty-icon"></i>
        <h4>No question sets found</h4>
        <p>Try adjusting your search criteria</p>
    </div>
}
else
{
    <div class="question-table-container">
        <table class="question-table">
            <thead>
                <tr>
                    <th class="ps-3">Name</th>
                    <th>Questions</th>
                    <th>Jobs Assigned</th>
                    <th>Status</th>
                    <th>Created Date</th>
                    <th class="text-center pe-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var questionSet in Model)
                {
                    var statusClass = questionSet.IsActive ? "badge bg-success status-badge" : "badge bg-secondary status-badge";
                    var toggleBtnClass = questionSet.IsActive ? "btn btn-sm btn-outline-warning" : "btn btn-sm btn-outline-success";
                    var toggleBtnIcon = questionSet.IsActive ? "fa-toggle-on" : "fa-toggle-off";
                    var toggleBtnText = questionSet.IsActive ? "Deactivate" : "Activate";

                    <tr>
                        <td class="ps-3 question-name-cell">
                            <div class="d-flex flex-column">
                                <strong class="question-name-text" title="@questionSet.Name">@questionSet.Name</strong>
                                @if (!string.IsNullOrEmpty(questionSet.Description))
                                {
                                    <small class="question-description-text" title="@questionSet.Description">
                                        @(questionSet.Description.Length > 50 ? questionSet.Description.Substring(0, 50) + "..." : questionSet.Description)
                                    </small>
                                }
                            </div>
                        </td>
                        <td class="text-center">@(questionSet.Questions?.Count ?? 0)</td>
                        <td class="text-center">@(questionSet.Jobs?.Count ?? 0)</td>
                        <td class="text-center">
                            <span class="@statusClass">
                                @(questionSet.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>@questionSet.CreatedDate.ToString("yyyy-MM-dd")</td>
                        <td class="text-center pe-3">
                            <div class="action-buttons">
                                <a asp-controller="Question" asp-action="Details" asp-route-id="@questionSet.Id"
                                   class="btn btn-outline-primary btn-sm" title="View Details">
                                    <i class="fas fa-eye me-1"></i>View
                                </a>
                                <button class="@toggleBtnClass toggle-status-btn"
                                        data-id="@questionSet.Id"
                                        data-status="@questionSet.IsActive.ToString().ToLower()"
                                        title="@toggleBtnText">
                                    <i class="fas @toggleBtnIcon me-1"></i>@toggleBtnText
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}