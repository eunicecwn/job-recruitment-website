@model JobRecruitment.Models.JobSeekerViewModels.JobSeekerEditVm

@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row g-4">
    <div class="col-lg-4">
        <div class="card">

            <div class="card-body text-center">
                @if (!string.IsNullOrWhiteSpace(Model.ExistingPhoto))
                {
                    <img src="/uploads/profilephotos/@Model.ExistingPhoto"
                         class="rounded-circle mb-3"
                         style="width:120px;height:120px;object-fit:cover;" />
                }
                else
                {
                    <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3"
                         style="width:120px;height:120px;">
                        <i class="bi bi-person fs-1"></i>
                    </div>
                }

                <h5 class="mb-0">@Model.FullName</h5>
                <div class="mt-3">
                    <a href="/Profile/Edit" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-pencil"></i> Edit Profile
                    </a>
                </div>
            </div>
        </div>

    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Phone</dt>
                    <dd class="col-sm-9">@Model.Phone ?? "-"</dd>

                    <dt class="col-sm-3">Address</dt>
                    <dd class="col-sm-9">@Model.Address ?? "-"</dd>

                    <dt class="col-sm-3">Experience</dt>
                    <dd class="col-sm-9">@Model.ExperienceLevel ?? "-"</dd>

                    <dt class="col-sm-3">Resume</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrWhiteSpace(Model.ExistingResume))
                        {
                            <a href="/uploads/resumes/@Model.ExistingResume" target="_blank">
                                View resume
                            </a>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
