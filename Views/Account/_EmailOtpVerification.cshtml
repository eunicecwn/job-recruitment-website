@model Demo.Models.AccountViewModels.RegisterViewModel

<!-- Email OTP Verification Modal -->
<div class="modal fade" id="emailOtpModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <!-- FIXED: Move CSRF token to top for better JavaScript access -->
            <div style="display: none;">
                @Html.AntiForgeryToken()
            </div>

            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-envelope-circle-check"></i>
                    Verify Your Email Address
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <div class="logo-container">
                        <img src="/images/logo.png" alt="HireRight Logo" class="logo-image">
                    </div>
                    <h6 class="mt-3">Email Verification Required</h6>
                    <p class="text-muted">We've sent a 6-digit verification code to your email address.</p>
                </div>

                <!-- FIXED: OTP Input Section - Initially Hidden but with proper structure -->
                <div id="otpSection" style="display: none;">
                    <div class="form-group mb-3">
                        <label for="OtpCode" class="form-label">Enter Verification Code</label>
                        <input type="text"
                               class="form-control text-center"
                               id="OtpCode"
                               name="OtpCode"
                               placeholder="000000"
                               maxlength="6"
                               pattern="\d{6}"
                               inputmode="numeric"
                               autocomplete="one-time-code"
                               style="font-size: 1.5rem; letter-spacing: 0.5rem;">
                        <div class="form-text">Enter the 6-digit code sent to your email</div>
                    </div>

                    <div id="otpMessage" class="alert" style="display: none;"></div>

                    <div class="d-flex gap-2 justify-content-center">
                        <button type="button" id="verifyOtpBtn" class="btn btn-primary">
                            <i class="fas fa-check"></i> Verify Code
                        </button>
                        <button type="button" id="resendOtpBtn" class="btn btn-outline-secondary">
                            Resend Code
                        </button>
                    </div>

                    <div class="text-center mt-3">
                        <small class="text-muted">
                            Didn't receive the code? Check your spam folder or
                            <button type="button" class="btn btn-link p-0" id="resendLink">click here to resend</button>
                        </small>
                    </div>
                </div>

                <!-- Send OTP Section - Initially Visible -->
                <div id="sendOtpSection">
                    <div class="text-center">
                        <p>Click the button below to send a verification code to:</p>
                        <div class="email-display bg-light p-2 rounded mb-3">
                            <strong id="displayEmail">your-email@example.com</strong>
                        </div>
                        <button type="button" id="sendOtpBtn" class="btn btn-primary">
                            <i class="fas fa-envelope"></i> Send Verification Code
                        </button>
                        <div id="sendOtpDebug" class="mt-2 small text-muted" style="display: none;">
                            Debug: Button clicked, processing...
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="/css/otp.css" />
}