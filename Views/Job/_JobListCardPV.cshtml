@model IPagedList<JobRecruitment.Models.Job>
@using X.PagedList
@using X.PagedList.Mvc.Core

<link rel="stylesheet" href="~/css/jobForm.css">

@{
    var currentDate = DateTime.UtcNow;
}

@if (Model == null)
{
    <div class="text-center py-5">
        <i class="fas fa-search fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No data available</h4>
        <p>Unable to load job listings</p>
    </div>
}
else if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-search fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No jobs found</h4>
        <p>Try adjusting your search criteria</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var job in Model)
        {
            var isClosed = job.ClosingDate.HasValue && job.ClosingDate.Value < currentDate;
            var statusClass = job.Status == JobStatus.Open ? "badge bg-success" :
            job.Status == JobStatus.Closed ? "badge bg-danger" : "badge bg-secondary";

            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 job-list-card @(!job.IsActive ? "card-inactive" : "")">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title" title="@job.Title">@job.Title</h5>
                            <span class="@statusClass">@job.Status</span>
                        </div>

                        @if (!job.IsActive)
                        {
                            <div class="alert alert-warning mb-2 py-2">
                                <small>
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    Please contact the Hired Right Pro admin
                                </small>
                            </div>
                        }

                        <div class="job-list-meta-item" title="@job.Location">
                            <i class="fas fa-map-marker-alt"></i>@job.Location
                        </div>

                        <div class="job-list-meta-item" title="@job.JobType">
                            <i class="fas fa-briefcase"></i>@job.JobType
                        </div>

                        <div class="job-list-salary">
                            <i class="fas fa-money-bill-wave me-2"></i>RM @job.MinSalary.ToString("N0") - RM @job.MaxSalary.ToString("N0")
                        </div>

                        <div class="job-list-date">
                            <small>
                                Posted: @job.PostedDate.ToString("yyyy-MM-dd")<br>
                                @if (job.ClosingDate.HasValue)
                                {
                                    <text>Closes: @job.ClosingDate.Value.ToString("yyyy-MM-dd")</text>
                                }
                                else
                                {
                                    <text>No closing date</text>
                                }
                            </small>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-grid gap-2">
                            @if (job.IsActive)
                            {
                                <a asp-controller="Job" asp-action="DisplayJob" asp-route-id="@job.Id"
                                   class="btn btn-outline-primary btn-sm">View Details</a>
                            }
                            else
                            {
                                <button class="btn btn-outline-secondary btn-sm" disabled title="Job is blocked. Please contact admin.">
                                    <i class="fas fa-ban me-1"></i>Blocked
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}