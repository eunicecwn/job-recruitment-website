@model JobRecruitment.Models.JobViewModel

<link rel="stylesheet" href="~/css/jobForm.css">

@{
    ViewData["Title"] = "Edit Job";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
    // Add status color logic - use ViewData to preserve the value
    var statusClass = "badge bg-";
    if (Model.Status == JobRecruitment.Models.JobStatus.Open)
    {
        statusClass += "success";
    }
    else if (Model.Status == JobRecruitment.Models.JobStatus.Closed)
    {
        statusClass += "danger";
    }
    else
    {
        statusClass += "secondary";
    }
}

<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<div class="container-fluid">
    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Please fix the following errors:</strong>
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="UpdateJob" asp-controller="Job" method="post" class="form needs-validation" id="jobForm" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input type="hidden" asp-for="EmployerId" value="@Model.EmployerId" />
        <input type="hidden" asp-for="PostedDate" value="@Model.PostedDate.ToString("yyyy-MM-ddTHH:mm:ss")" />
        <input type="hidden" asp-for="Latitude" id="latitude-input" value="@Model.Latitude" />
        <input type="hidden" asp-for="Longitude" id="longitude-input" value="@Model.Longitude" />

        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <!-- Fixed status display -->
                            <span class="@statusClass">@Model.Status</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Title -->
                        <div class="form-group mb-4">
                            <label asp-for="Title" class="required"></label>
                            <input asp-for="Title" class="form-control" maxlength="120" />
                            <small id="title-counter" class="text-muted"></small>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="form-group mb-4">
                            <label asp-for="Description" class="required"></label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Location with Map -->
                        <div class="form-group mb-4 position-relative">
                            <label asp-for="Location" class="required"></label>
                            <input asp-for="Location" class="form-control" id="location-input" autocomplete="off" />
                            <div id="suggestions"></div>
                            <small class="form-text text-muted">Search for location or click on the map</small>
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <!-- Map -->
                        <div class="form-group mb-4">
                            <div id="map" style="height: 400px; border: 1px solid #ccc; border-radius: 0.375rem;"></div>
                        </div>

                        <!-- Salary Fields -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="MinSalary" class="required"></label>
                                    <div class="input-group has-validation">
                                        <span class="input-group-text">RM</span>
                                        <input asp-for="MinSalary" class="form-control" type="number" step="0.01" min="0" />
                                        <span asp-validation-for="MinSalary" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="MaxSalary" class="required"></label>
                                    <div class="input-group has-validation">
                                        <span class="input-group-text">RM</span>
                                        <input asp-for="MaxSalary" class="form-control" type="number" step="0.01" min="0" />
                                        <span asp-validation-for="MaxSalary" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Dropdowns -->
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="JobType" class="required"></label>
                                    <select asp-for="JobType" asp-items="Model.JobTypes" class="form-select">
                                        <option value="">-- Select Job Type --</option>
                                    </select>
                                    <span asp-validation-for="JobType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Status" class="required"></label>
                                    <select asp-for="Status" asp-items="Model.StatusOptions" class="form-select">
                                        <option value="">-- Select Status --</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="CategoryId" class="required"></label>
                                    <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
                                        <option value="">-- Select Category --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Closing Date -->
                        <div class="form-group mb-4">
                            <label asp-for="ClosingDate"></label>
                            <input asp-for="ClosingDate" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="ClosingDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-controller="Job" asp-action="DisplayJob" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Job Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted">Job ID</small>
                            <p class="mb-0">@Model.Id</p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Status</small>
                            <p class="mb-0"><span class="@statusClass">@Model.Status</span></p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Posted Date</small>
                            <p class="mb-3">@Model.PostedDate.ToString("yyyy-MM-dd")</p>
                        </div>
                        @if (Model.ClosingDate.HasValue)
                        {
                            <div class="mb-3">
                                <small class="text-muted">Days Remaining</small>
                                <p class="mb-0">
                                    @{
                                        var daysRemaining = (Model.ClosingDate.Value - DateTime.UtcNow).Days;
                                        if (daysRemaining < 0)
                                        {
                                            <text>Closed @Math.Abs(daysRemaining) days ago</text>
                                        }
                                        else
                                        {
                                            <text>@daysRemaining days left</text>
                                        }
                                    }
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/JobPostFormValidation.js"></script>
    <script src="~/js/map.js"></script>
}