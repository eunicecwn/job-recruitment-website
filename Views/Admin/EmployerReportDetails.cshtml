@model EmployerReport
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .card {
        border-radius: 1rem;
    }

    .card-header h3 {
        font-weight: 600;
    }

    .fs-5 p {
        margin-bottom: 0.75rem;
    }
</style>

<div class="container mt-4">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-warning text-dark rounded-top-4">
            <h3 class="mb-0">Employer Report Detail</h3>
        </div>
        <div class="card-body fs-5">
            <p><strong>Reported Employer:</strong> @Model.Employer.CompanyName</p>
            <p><strong>Reporter:</strong> @Model.Reporter.FullName</p>
            <p><strong>Reason:</strong> <span class="text-danger">@Model.Reason</span></p>
            <p><strong>Date:</strong> @Model.DateReported.ToString("f")</p>
        </div>
        <div class="card-footer bg-light">
            <a asp-action="Reports" class="btn btn-secondary">← Back to Reports</a>
        </div>
    </div>
</div>
