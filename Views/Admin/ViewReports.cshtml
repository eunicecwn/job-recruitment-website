@model List<JobRecruitment.Models.Report>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Reports Overview";
}

@{
    // change tl form 25/7
}
<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-danger text-white rounded-top-4">
            <h3 class="mb-0">Reported Employers</h3>
        </div>
        <div class="card-body">
            @if (Model.Count == 0)
            {
                <p class="text-muted">No reports available.</p>
            }
            else
            {
                <table class="table table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Reason</th>
                            <th>Reported By</th>
                            <th>Against Employer</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var report = Model[i];
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@report.Reason</td>
                                <td>
                                    <strong>@report.JobSeeker?.Username</strong><br />
                                    <small>ID: @report.JobSeekerId</small>
                                </td>
                                <td>
                                    <strong>@report.Employer?.Username</strong><br />
                                    <small>Company: @report.Employer?.CompanyName</small>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
